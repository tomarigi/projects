<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2 my-5" id="profile">
      <div class="card p-15">
        <h3>プロフィール</h3>
        <div class="form-group">
          <label for="">名前: </label>
          <div class="form-control bottom"><%= @profile.name %></div>
        </div>
        <div class="form-group">
          <label for="">トビタテ: </label>
          <div class="form-control bottom"><%= @profile.term %>期</div>
        </div>
        <div class="form-group">
          <label for="">作成日: </label>
          <div class="form-control bottom"><%= @profile.created_at.strftime('%Y年%m月%d日 %H:%M:%S') %></div>
        </div>
        <div class="form-group">
          <label for="">最終更新日: </label>
          <div class="form-control bottom"><%= @profile.updated_at.strftime('%Y年%m月%d日 %H:%M:%S') %></div>
        </div>
      </div>
      <div class="col-md-12 text-left _btn_option">
        <span>名前と期の変更</span><%= link_to '編集', user_profile_edit_path, class: 'btn btn-light pull-right' %>
      </div>
      <div class="col-md-12 text-left _btn_option">
        <span>メールアドレスやパスワードの変更</span><%= link_to '高度な編集', edit_user_registration_path, class: 'btn btn-light pull-right' %>
      </div>
    </div>
  </div>
</div>