

<div class="container my-5">
  <div class="row">
    <%= link_to '←戻る', user_projects_path %>
    <div class="col-md-8 offset-md-2">
      <div class="card p-15">

        <div class="form-group">
          <label class="font-weight-bold" for="">タイトル</label>
          <h4><%= @project.title %></h4>
        </div>

        <div class="form-group">
          <label class="font-weight-bold" for="">メイン画像</label>
          <div>
            <%= image_tag(@project.image, :class => 'img-responsive', onerror: 'this.error=null;this.src="default-thumbnail.jpg"') %>
          </div>
        </div>

        <div class="form-group">
          <label class="font-weight-bold" for="">紹介文</label>
          <div>
            <%= auto_link(markdown(@project.description), :html => { :target => '_blank' }) %>
          </div>
        </div>

        <div class="form-group">
          <label class="font-weight-bold" for="">組織名</label>
          <p><%= @project.organization %></p>
        </div>

        <div class="form-group">
          <label class="font-weight-bold" for="">設立日</label>
          <p><%= @project.established_at %></p>
        </div>

        <div class="form-group">
          <p><%= link_to '公式サイト', @project.url %></p>
        </div>

        <div class="form-group">
          <label class="font-weight-bold" for="">公開・非公開</label>
          <p>
            <%= @project.publish %>
          </p>
        </div>

      </div>

      <div class="my-4">
        <%= link_to '編集', edit_user_project_path(@project), class: 'btn btn-info' %>
      </div>

    </div>
  </div>
</div>