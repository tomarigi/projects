<title><%= full_title(yield(:title)) %></title>
<%= csrf_meta_tags %>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
<meta name="description" content=<%= full_description(yield(:description)) %>>
<%= favicon_link_tag('favicon.ico') %>
<!-- Apple Touch Icon (at least 200x200px) -->
<%= favicon_link_tag('favicon.ico',
                     {:rel => 'apple-touch-icon',
                      :sizes => '180x180',
                      :type => 'image/png'}) %>
<!-- To run web application in full-screen -->
<meta name="apple-mobile-web-app-capable" content="yes">
<!-- Status Bar Style (see Supported Meta Tags below for available values) -->
<!-- Has no effect unless you have the previous meta tag -->
<meta name="apple-mobile-web-app-status-bar-style" content="black">
<!-- Microsoft Tiles -->
<meta name="application-name" content="Tomarigi Portfolio"/>
<meta name="msapplication-square70x70logo" content="msapplication/small.jpg"/>
<meta name="msapplication-square150x150logo" content="msapplication/medium.jpg"/>
<meta name="msapplication-wide310x150logo" content="msapplication/wide.jpg"/>
<meta name="msapplication-square310x310logo" content="msapplication/large.jpg"/>
<meta name="msapplication-TileColor" content="#004EA3"/>

<!-- Facebook Open Graph -->
<meta property="og:type" content="website">
<meta property="og:url" content=<%= Settings.site.url %>>
<meta property="og:title" content=<%= full_title(yield(:title)) %>>
<meta property="og:image" content="https://example.com/image.jpg">
<meta property="og:description" content=<%= full_description(yield(:description)) %>>
<meta property="og:site_name" content="Tomarigi Portfolio">
<meta property="og:locale" content="ja_JP">
<meta property="og:image:width" content="1200">
<meta property="og:image:height" content="630">

<!-- Twitter Card -->
<meta name="twitter:card" content=<%= full_description(yield(:description)) %>>
<meta name="twitter:site" content="@ryugakujapan">
<meta name="twitter:creator" content="@goingmywaysp">
<meta name="twitter:url" content=<%= Settings.site.url %>>
<meta name="twitter:title" content=<%= full_title(yield(:title)) %>>
<meta name="twitter:description" content=<%= full_description(yield(:description)) %>>
<meta name="twitter:image" content="/msapplication/wide.jpg">